<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff993535" />
            <gradient  android:angle="-90"  android:startColor="#ffb13535" android:endColor="#ff993535"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#993333" />
            <solid  android:color="#993333"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff993535" />
            <gradient  android:angle="-90"  android:startColor="#993333" android:endColor="#ff8a3535" />
        </shape>
    </item>
</selector>
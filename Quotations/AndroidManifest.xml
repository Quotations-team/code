<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quotations"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.quotations.QuotationsApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.quotations.SplashActivity"
            android:label="@string/title_activity_guide"
      android:configChanges = "orientation"
      android:screenOrientation = "portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.quotations.HomeActivity"
            android:label="@string/title_activity_home"
			android:configChanges = "orientation"
			android:screenOrientation = "portrait" >
        </activity>
        <activity
            android:name="com.example.quotations.SearchActivity"
            android:label="@string/title_activity_search"
			android:configChanges = "orientation"
			android:screenOrientation = "portrait" >
        </activity>
        <activity
            android:name="com.example.quotations.CategoryActivity"
            android:label="@string/title_activity_category"
			android:configChanges = "orientation"
			android:screenOrientation = "portrait" >
        </activity>
    </application>

</manifest>
